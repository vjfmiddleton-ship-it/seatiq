// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// User & Authentication
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(PLANNER)

  // Relations
  accounts      Account[]
  sessions      Session[]
  events        Event[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum UserRole {
  OWNER
  PLANNER
}

// NextAuth.js Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// Event & Seating Domain
// ============================================================================

model Event {
  id            String    @id @default(cuid())
  name          String
  date          DateTime?
  venue         String?
  description   String?
  tableCount    Int       @default(10)
  seatsPerTable Int       @default(8)

  // Relations
  owner         User      @relation(fields: [ownerId], references: [id])
  ownerId       String
  guests        Guest[]
  constraints   Constraint[]
  objectives    ObjectiveWeights?
  plans         PlanVersion[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([ownerId])
}

model Guest {
  id          String      @id @default(cuid())
  name        String
  email       String?
  company     String?
  department  String?
  jobTitle    String?
  seniority   Seniority?
  guestType   GuestType   @default(NEUTRAL)
  notes       String?
  tags        String[]    // AI-parsed tags
  needsReview Boolean     @default(false)
  confidence  Float?      // AI confidence score

  // Relations
  event       Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([eventId])
}

enum Seniority {
  JUNIOR
  MID
  SENIOR
  EXECUTIVE
}

enum GuestType {
  BUYER
  SELLER
  NEUTRAL
  CATALYST
}

model Constraint {
  id          String          @id @default(cuid())
  type        ConstraintType
  guestIds    String[]        // Array of guest IDs involved
  value       Int?            // For numeric constraints (max sellers, min buyers)
  priority    Int             @default(1)
  notes       String?

  // Relations
  event       Event           @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String

  createdAt   DateTime        @default(now())

  @@index([eventId])
}

enum ConstraintType {
  MUST_SIT_TOGETHER
  MUST_NOT_SIT_TOGETHER
  MAX_SELLERS_PER_TABLE
  MIN_BUYERS_PER_TABLE
}

model ObjectiveWeights {
  id                String  @id @default(cuid())
  noveltyWeight     Float   @default(0.25)   // Objective A: New connections
  diversityWeight   Float   @default(0.25)   // Objective B: Cross-department
  balanceWeight     Float   @default(0.25)   // Objective C: Balanced tables
  transactionWeight Float   @default(0.25)   // Objective D: Sales opportunities

  // Relations
  event             Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId           String  @unique
}

model PlanVersion {
  id           String   @id @default(cuid())
  version      Int
  status       PlanStatus @default(DRAFT)

  // Seating assignments: { "table_1": ["guest_id_1", "guest_id_2"], ... }
  assignments  Json

  // Computed metrics per objective
  metrics      Json     // { novelty: 0.8, diversity: 0.7, balance: 0.9, transaction: 0.6, weighted: 0.75 }

  // Explanations: per-table rationale + overall summary
  explanations Json     // { perTable: { "table_1": ["reason1", "reason2"] }, overall: "..." }

  // Warnings for any issues
  warnings     Json     // ["Guest X has no company specified", ...]

  // Relations
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId      String

  createdAt    DateTime @default(now())

  @@index([eventId])
  @@unique([eventId, version])
}

enum PlanStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}
