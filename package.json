{
  "name": "seatiq",
  "version": "0.1.0",
  "private": true,
  "description": "Corporate event networking orchestration - deterministic seating optimization",
  "scripts": {
    "dev": "pnpm --filter @seatiq/web dev",
    "build": "pnpm --filter @seatiq/web build",
    "start": "pnpm --filter @seatiq/web start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "db:migrate": "pnpm --filter @seatiq/web prisma migrate dev",
    "db:push": "pnpm --filter @seatiq/web prisma db push",
    "db:studio": "pnpm --filter @seatiq/web prisma studio",
    "db:generate": "pnpm --filter @seatiq/web prisma generate",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
